<%= form_with model: book do |f| %>
     <div class="form-group">
       <%= f.label :Title %>
       <%= f.text_field :title, class:"form-control" %>
     </div>
     <div class="form-group">
       <%= f.label :Opinion %>
       <%= f.text_area :body, class:"form-control", rows:"5" %>
     </div>
     <%= f.submit 'Create Book', class:"btn btn-success" %>
    <% end %>
    </div>